"http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <definition name="base.definition" template="/WEB-INF/views/tiles/layout.jsp">
        <put-attribute name="title" value="default.title" />
        <put-attribute name="header" value="/WEB-INF/views/tiles/header.jsp" />
        <put-attribute name="body" value="" />
        <put-attribute name="footer" value="/WEB-INF/views/tiles/footer.jsp" />
    </definition>

    <!-- Home -->
    <definition name="home.definition" extends="base.definition">
        <put-attribute name="title" value="home.title" />
    </definition>
    <definition name="/home/home" extends="home.definition">
        <put-attribute name="body" value="/WEB-INF/views/home/home.jsp" />
    </definition>
    
    <!-- Reporting -->
    <definition name="/reporting/showEndedGame" extends="base.definition">
    	<put-attribute name="body" value="/WEB-INF/views/reporting/showEndedGame.jsp"/>
    </definition>
     <definition name="/reporting/showComingGame" extends="base.definition">
    	<put-attribute name="body" value="/WEB-INF/views/reporting/showComingGame.jsp"/>
    </definition>
     <definition name="/reporting/showRange" extends="base.definition">
    	<put-attribute name="body" value="/WEB-INF/views/reporting/showRange.jsp"/>
    </definition>

    <!-- Create tournament -->
    <definition name="/tournament/create/form" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/views/tournament/create/form.jsp" />
    </definition>
    <definition name="/tournament/create/result" extends="base.definition">
        <put-attribute name="body" value="/WEB-INF/views/tournament/create/result.jsp" />
    </definition>

</tiles-definitions>